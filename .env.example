# NBNE Personaliser - Environment Configuration
# Copy this file to .env and fill in your values

# ============================================
# ENVIRONMENT
# ============================================
NODE_ENV=development  # development | production
PYTHON_ENV=development

# ============================================
# API CONFIGURATION
# ============================================
APP_API_PREFIX=/api
APP_DEFAULT_SEED=42

# ============================================
# SECURITY (CRITICAL!)
# ============================================
# IMPORTANT: Set to false in production!
APP_BYPASS_AUTH_FOR_TESTS=true  # true for dev, FALSE for production
APP_CLEAN_PHOTOS_ON_START=true

# Secret key for JWT tokens (generate with: openssl rand -hex 32)
APP_SECRET_KEY=your-secret-key-here-change-this-in-production

# ============================================
# STORAGE
# ============================================
APP_STORAGE_BACKEND=local  # local | s3

# S3 Configuration (if using S3)
APP_S3_BUCKET=
APP_S3_REGION=
APP_S3_ENDPOINT_URL=
APP_S3_ACCESS_KEY_ID=
APP_S3_SECRET_ACCESS_KEY=
APP_PRESIGN_EXPIRES_S=3600

# ============================================
# EXTERNAL DOWNLOADS
# ============================================
APP_ALLOW_EXTERNAL_DOWNLOADS=true
APP_DOWNLOAD_CONCURRENCY=4
APP_DOWNLOAD_TIMEOUT_S=30
APP_MAX_ZIP_MB=25

# ============================================
# DATABASE
# ============================================
DATABASE_URL=sqlite:///data/app.db

# ============================================
# CORS (Frontend URLs)
# ============================================
# Development
FRONTEND_ORIGIN=http://localhost:3000

# Production (update these for your domains)
# FRONTEND_ORIGIN=https://www.nbne.uk,https://demo.nbne.uk

# ============================================
# MONITORING & ERROR TRACKING
# ============================================
# Sentry DSN (sign up at sentry.io for free tier)
SENTRY_DSN=
SENTRY_ENVIRONMENT=development  # development | staging | production

# ============================================
# SUPPORT & NOTIFICATIONS
# ============================================
SUPPORT_EMAIL=support@nbne.uk
ADMIN_EMAIL=admin@nbne.uk

# ============================================
# RATE LIMITING
# ============================================
RATE_LIMIT_PER_MINUTE=10
RATE_LIMIT_PER_HOUR=100

# ============================================
# DEPLOYMENT
# ============================================
PORT=8000

# Render.com / Railway specific
# These are set automatically by the platform
# PORT=
# PYTHON_VERSION=3.11.0
